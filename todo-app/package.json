{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Spring Boot Todo App with minified JS",
  "scripts": {
    "minify": "npm run minify:app && npm run minify:store && npm run minify:api && npm run minify:drag",
    "minify:app": "terser src/main/resources/static/js/app.js -o src/main/resources/static/js/app.min.js -c -m",
    "minify:store": "terser src/main/resources/static/js/modules/store.js -o src/main/resources/static/js/modules/store.min.js -c -m",
    "minify:api": "terser src/main/resources/static/js/modules/api.js -o src/main/resources/static/js/modules/api.min.js -c -m",
    "minify:drag": "terser src/main/resources/static/js/modules/drag.js -o src/main/resources/static/js/modules/drag.min.js -c -m",
    "build": "npm run minify"
  },
  "devDependencies": {
    "terser": "^5.44.1"
  }
}
